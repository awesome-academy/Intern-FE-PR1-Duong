extends ../layouts/defaultLayout
block title
  title Đăng nhập
block main
  .signin
    .wrapper
      +breadCums('Đăng nhập')
      .grid
        .col-6
          .signin__element
            h5.signin__title THÔNG TIN CÁ NHÂN
            form.signin__form(action="")
              label.form__label(for="email") Email của bạn
              input.form__input#email(type="text")
              label.form__label(for="password") Mật khẩu
              input.form__input#password(type="password")
              .signin__remember
                input.form__input--checkbox#form__input--checkbox(type='checkbox')
                label.signin__label.form__label.form__label--checkbox(for='form__input--checkbox') Ghi nhớ tài khoản
                a.signin__forget(href="") Bạn quên mật khẩu?
              .signin__button
                button.btn.btn--primary Đăng nhập
        .col-6
          .signin__element
            h5.signin__title BẠN CHƯA CÓ TÀI KHOẢN?
            p.signin__text Đăng ký tài khoản ngay để có thể mua hàng nhanh chóng và dễ dàng hơn ! Ngoài ra còn có rất nhiều chính sách và ưu đãi cho các thành viên citybike
            .signin__button
              button.btn.btn--primary Đăng ký
